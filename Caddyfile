# Docker Compose configuration for Gobblers WebSocket Server

# Local testing with Docker Compose - uses port 8443 for HTTPS
# localhost:8443 {
#     tls internal
#     reverse_proxy gobble-app:3000 {
#         # WebSocket headers for Socket.IO support
#         header_up Connection {>Connection}
#         header_up Upgrade {>Upgrade}
#     }
# }

{$SERVER_IP} {
    tls internal
    reverse_proxy gobble-app:3000 {
        # WebSocket headers for Socket.IO support
        header_up Connection {>Connection}
        header_up Upgrade {>Upgrade}
    }
}

# Production configuration (uncomment and modify for your domain)
# yourdomain.com {
#     reverse_proxy gobble-app:3000 {
#         header_up Connection {>Connection}
#         header_up Upgrade {>Upgrade}
#     }
# }